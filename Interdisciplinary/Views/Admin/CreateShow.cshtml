    <form asp-action="CreateShow">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="AvailableTickets" class="control-label"></label>
            <input asp-for="AvailableTickets" class="form-control" />
            <span asp-validation-for="AvailableTickets" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Date" class="control-label"></label>
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="ImageUrl" class="control-label"></label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="GenreId" class="control-label"></label>
            <select asp-for="GenreId" class="form-control" asp-items="ViewBag.GenreId"></select>
        </div>
        <div>
            <label asp-for="AdminId" class="control-label"></label>
            <select asp-for="AdminId" class="form-control" asp-items="ViewBag.AdminId"></select>
        </div>

        <div>
            <button type="submit" class="green">SAVE</button>
        </div>
    </form>

