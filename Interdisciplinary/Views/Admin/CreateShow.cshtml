@model Show

<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Barlow:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/create.css">
    <script src="/js/admin.js"></script>
    <title> Admin create shows </title>
</head>
<body>

    <h1>CREATE SHOW</h1>
    


    <form asp-action="CreateShow" method="post">
        <label asp-for="Title">Title </label>
        <input asp-for="Title" />
        <div><span asp-validation-for="Title"></span></div><br />

        <label asp-for="AvailableTickets">AvailableTickets </label>
        <input asp-for="AvailableTickets" />
        <div><span asp-validation-for="AvailableTickets"></span></div><br />

        <label asp-for="Price">Price </label>
        <input asp-for="Price" />
        <div><span asp-validation-for="Price"></span></div><br />

        <label asp-for="ImageUrl">ImageUrl </label>
        <input asp-for="ImageUrl" />
        <div><span asp-validation-for="ImageUrl"></span></div><br />

        <label asp-for="Date">Date </label>
        <input asp-for="Date" />
        <div><span asp-validation-for="Date"></span></div><br />

        <label asp-for="AdminId"></label>
        <select asp-for="AdminId" asp-items="ViewBag.AdminId"></select>
        <span asp-validation-for="AdminId"></span>

        <label asp-for="GenreId">Genre</label>
        <select asp-for="GenreId" asp-items="ViewBag.GenreId"></select>
        <span asp-validation-for="GenreId"></span>

        <button type="submit">Create show</button>
    </form>
        <button asp-action="Shows">Cancel</button>

    @await Html.PartialAsync("_ValidationScriptsPartial")

</body>
</html>

